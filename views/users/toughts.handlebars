<div class="home-header">
    <h1>Pensamentos de <span>{{ userName }}</span>:</h1>
</div>
<div class="toughts-container">
    {{#each toughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>por <a href="/users/{{this.User.id}}"><span>{{this.User.name}}</span></a></figcaption>
        </figure>
    {{/each}}
</div>